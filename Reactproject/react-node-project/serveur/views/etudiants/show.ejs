<%- include('../partials/header.ejs') %>
<div class="hero hero3">
</div>
<div class="page-single movie-single movie_single">
	<div class="container">
		<div class="row ipad-width2">
			<div class="col-md-4 col-sm-12 col-xs-12">
				<div class="movie-img sticky-sb">
					<img src="<%= etudiant.coverImagePath %>" alt="">
					<div class="movie-btn">	
						<div>
							<div><a href="/etudiants/<%= etudiant.id %>/edit" class="item item-1 yellowbtn"> <i class="ion-edit"></i> Edit</a></div>
						</div>
						<br>
							<div><%- include('../partials/deleteForm',
								{ url: `/etudiants/${etudiant.id}` }) %></div>
					</div>
				</div>
			</div>
			<div class="col-md-8 col-sm-12 col-xs-12">
				<div class="movie-single-ct main-content">
					<h1 class="bd-hd"><%= etudiant.name %></h1>
				<br>
				<br>
					<div class="movie-rate">
						<h3 style="color:#F0F8FF ;">Etudiant</h3>
						<h2 style="color:#F0F8FF ;"><%= etudiant.name %></h2>
		  </div>
				<div class="mvcast-item">											
					<div class="cast-it">
						<div class="cast-left">
							<img src="images/uploads/cast1.jpg" alt="">
							<p style="color: rgb(74, 104, 202);">Etudiant:</p>
						</div>
						<p><%= etudiant.name %></p>
					</div>
					<div class="cast-it">
						<div class="cast-left">
							<img src="images/uploads/cast1.jpg" alt="">
							<p style="color: rgb(74, 104, 202);">Date of Birth:</p>
						</div>
						<p><%= etudiant.DateofBirth %></p>
					</div>
					<div class="cast-it">
						<div class="cast-left">
							<img src="images/uploads/cast1.jpg" alt="">
							<p style="color: rgb(74, 104, 202);">Place of Birth:</p>
						</div>
						<p><%= etudiant.placeofBirth %></p>
					</div>
					<div class="cast-it">
						<div class="cast-left">
							<img src="images/uploads/cast1.jpg" alt="">
							<p style="color: rgb(74, 104, 202);">Description:</p>
						</div>
						<p><%= etudiant.description %></p>
					</div>
					<div class="cast-it">
						<div class="cast-left">
							<img src="images/uploads/cast1.jpg" alt="">
							<p style="color: rgb(74, 104, 202);">Pfes By Etudiant</p>
						</div>
						<% if (pfesByEtudiant.length > 0) { %>
							<%- include('../partials/pfeGrid', { pfes: pfesByEtudiant }) %>
						  <% } %>
					</div>	
						</div>
						
					
		</div>
	</div>
</div>
