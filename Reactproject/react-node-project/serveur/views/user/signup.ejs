
<div class="slider5">
    <div class="log">
      <img class="logo2" src="images/logo.jpg" alt="">
      <h2 class="fo">Create an Account </h2>
      <h4 class="fo">Sign up using: </h4>
        <% if(errorMsg != null && errorMsg.length>0) {%>
        <div id="flash-msg" class="alert alert-danger">
          <%=errorMsg %>
        </div>
        <%}%>
        <form action="/user/signup" method="POST">
          <div class="form-group">
            <label for="name">Name</label>
            <input
              type="name"
              class="in"
              name="name"
              id="name"
              required
            />
          </div>
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="in" name="email" id="email" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="in"
              name="password"
              id="password"
            />
          </div>
          <div class="form-group">
            <label for="password2">Verify Password</label>
            <input
              type="password"
              class="in"
              name="password2"
              id="password2"
            />
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit" class="sub">
            Sign Up
          </button>
          
        </form>
      </div>
    </div>
  </div>