
<div class="slider5">
    <div class="log">
      <img class="logo2" src="images/logo.jpg" alt="">
      <h2 class="fo">Welcome Back! </h2>
      <h4 class="fo">Log in using </h4>
        <% if(errorMsg !=null && errorMsg.length>0) {%>
        <div id="flash-msg" class="alert alert-danger">
          <%=errorMsg %>
        </div>
        <%}%>
        <form action="/user/signin" method="POST">
          <div class="form-group">
            <label for="email">Email address</label>
            <input type="email" class="in" name="email" id="email" />
          </div>
          <div class="form-group">
            <label for="password">Password</label>
            <input
              type="password"
              class="in"
              name="password"
              id="password"
            />
          </div>
          <input type="hidden" name="_csrf" value="<%= csrfToken %>" />
          <button type="submit" class="sub">
            Sign In
          </button>
        </form>
        <p class="ap">
          Don't have an account? <a href="/user/signup"> Sign Up!</a>
        </p>
      </div>
    </div>
  </div>